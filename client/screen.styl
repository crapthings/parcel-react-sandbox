$primaryColor = #333

body
  font-family 'SF Pro SC', 'SF Pro Text', 'SF Pro Icons', 'PingFang SC', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  color $primaryColor

a
  color $primaryColor

table
  border-collapse collapse

th
td
  padding 8px
  border 1px solid $primaryColor
  text-align left

#aside
  width 220px

.loader
  position fixed
  top 0
  width 0%
  height 4px
  background lightgreen
