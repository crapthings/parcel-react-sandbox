$primary-color = #7b1fa2

html
body
#root
#dashboard
.screen
  width 100%
  height auto
  min-height 100vh
  & > div
    height 100%

body
  font-family "SF Pro SC", "SF Pro Text", "SF Pro Icons", "PingFang SC", "Helvetica Neue", "Helvetica", "Arial", sans-serif
  font-size 14px
  color #424242
  overscroll-behavior none

a
  text-decoration none

h1, h2, h3, h4, h5, h6
  margin 0
  padding 0

table
  width 100%
  border-collapse collapse

th
td
  text-align left
  border 1px solid #efefef

input[type='text']
  outline none

span.title
  font-size 1.3em
  font-weight bold

.text-align-right
  text-align right

.fit
  width 100%
  height 100%

.screen1
  display grid
  grid-template-columns 3fr 1fr
  grid-template-rows 1fr 1.2fr 1.2fr 1.4fr
  grid-column-gap 0px
  grid-row-gap 0px
  & > div
    padding 16px
  & > .div1
      grid-area 1 / 1 / 2 / 2
      background-color #f5f5f5
  & > .div2
      grid-area 2 / 1 / 4 / 2
      background-color #f5f5f5
      padding 0
  & > .div3
      grid-area 4 / 1 / 5 / 2
      background-color #f5f5f5
  & > .div4
      grid-area 1 / 2 / 3 / 3
  & > .div5
      grid-area 3 / 2 / 5 / 3

.card-group-1
  display grid
  grid-template-columns 1fr 1fr 1fr 1fr
  grid-template-rows 1fr
  grid-column-gap 16px
  grid-row-gap 0px
  height 100%
  & > div
    overflow hidden
    display flex
    flex-flow column
    background-color white
    height 100%
    border-radius 16px
    & > div
      flex 1
    & > div:nth-child(2)
      flex 2
  & > .div1
    grid-area 1 / 1 / 2 / 2
    background-color #7b1fa2
    color white
  & > .div2
    grid-area 1 / 2 / 2 / 3
  & > .div3
    grid-area 1 / 3 / 2 / 4
  & > .div4
    grid-area 1 / 4 / 2 / 5

.card-group-2
  display grid
  grid-template-columns 1fr 1fr 1fr
  grid-template-rows 1fr
  grid-column-gap 16px
  grid-row-gap 0px
  height 100%
  & > div
    background-color white
    height 100%
    border-radius 16px
  & > .div1
    grid-area 1 / 1 / 2 / 2
  & > .div2
    grid-area 1 / 2 / 2 / 3
  & > .div3
    grid-area 1 / 3 / 2 / 4

.primary-color
  color $primary-color

.pvtUi td:first-child
  width 280px

textarea
  width 100%
  padding 8px
  border 1px solid #dadada
  resize none

.grid-stack-item-content
  border-radius 12px
  background-color $primary-color
  color white

.grid-stack-item input
.grid-stack-item button
.grid-stack-item select
  position relative
  z-index 999

.widget-form
  display none
  position fixed
  z-index 9999
  top 0
  right 0
  bottom 0
  left 0
  padding 32px
  background-color rgba(255, 255, 255, .9)
  & *
    width 100%

#chartdiv
  width 100%
  height 100%

.demo-theme-dark .demo-background
  background #000

.message
  white-space nowrap
